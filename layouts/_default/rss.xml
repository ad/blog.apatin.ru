{{- $pctx := . -}}
{{- if .IsHome -}}{{ $pctx = .Site }}{{- end -}}
{{- $pages := slice -}}
{{- if or $.IsHome $.IsSection -}}
{{- $pages = $pctx.RegularPages -}}
{{- else -}}
{{- $pages = $pctx.Pages -}}
{{- end -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
{{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Permalink }}</link>
    <description>Личный блог с мыслями и наблюдениями</description>
    {{ with .Site.LanguageCode }}<language>{{.}}</language>{{end}}
    <managingEditor>{{ .Site.Author.email }} {{ .Site.Author.name }}</managingEditor>
    <webMaster>{{ .Site.Author.email }} {{ .Site.Author.name }}</webMaster>
    <copyright>{{ .Site.Params.copyright }}</copyright>
    {{ if not .Date.IsZero }}<lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
    {{- with .OutputFormats.Get "RSS" -}}{{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}{{- end -}}
    {{ range $pages }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      {{ with .Site.Author.email }}<author>{{.}}{{ with $.Site.Author.name }} ({{.}}){{end}}</author>{{end}}
      <guid>{{ .Permalink }}</guid>
      <description>{{ if not .Truncated -}}
        {{ .Content }}
      {{ else }}
        {{ .Summary | html }}
        &lt;p class="foot"&gt;&lt;a href="{{ .Permalink }}"&gt;Читать далее&lt;/a&gt;&lt;/p&gt;
      {{ end }}
      </description>
    </item>
    {{ end }}
  </channel>
</rss>
